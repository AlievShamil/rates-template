<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_large"
        android:id="@+id/nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:minWidth="36dp"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored" />
    <TextView
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_large"
        android:id="@+id/valute_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Доллар США "
        android:layout_toRightOf="@id/nominal"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"/>
    <TextView
        android:paddingLeft="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_small"
        android:id="@+id/charCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="USD"
        android:layout_alignLeft="@id/nominal"
        android:layout_below="@id/nominal"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"/>
    <TextView
        android:paddingLeft="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:id="@+id/numCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(840)"
        android:layout_below="@id/valute_name"
        android:layout_alignLeft="@id/valute_name"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"/>
    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/min_width"
        android:textAlignment="textEnd"
        android:layout_centerInParent="true"
        android:paddingRight="@dimen/padding_large"
        android:layout_alignParentRight="true"
        tools:text="56.014"
        android:textAppearance="@android:style/TextAppearance.Material.Title"/>
</RelativeLayout>